{
  "display": "Express server",
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "types": ["node", "express","jest"],
    "lib": ["es2022", "dom"],
    "outDir": "build",
    "baseUrl": "./",
    "allowJs": true,
    "moduleDetection": "force",
    "rootDir": "src",
    "strict": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules", "**/*.spec.ts","jest.config.ts", "src/**/*.test.ts"],
  "include": ["src/**/*", "config/**/*", "bin/**/*", "public/**/*"]
}
